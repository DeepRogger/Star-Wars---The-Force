     <!-- ===================== Force Pull (Apprentice) =============================== -->
 
   <ThingDef Class="ProjectJedi.ForceAbilityDef" ParentName="BaseAbility">
    <defName>PJ_ForcePull_Apprentice</defName>
    <label>Force Pull</label>
    <uiIconPath>UI/ForceUser/ForcePull</uiIconPath>
    <description>Level 1: Pulls ground objects towards the caster.</description>
<!--    <thingClass>ThingWithComps</thingClass> -->
    <forcePoolCost>0.5</forcePoolCost>
	<requiresAlignment>false</requiresAlignment>
	<changesAlignment>false</changesAlignment>	
    <MainVerb Class="AbilityUser.VerbProperties_Ability">
        <verbClass>AbilityUser.Verb_UseAbility</verbClass>
			<tooltipShowProjectileDamage>false</tooltipShowProjectileDamage>
			<tooltipShowExtraDamages>false</tooltipShowExtraDamages>
			<tooltipShowHediffsToApply>false</tooltipShowHediffsToApply>
			<tooltipShowMentalStatesToApply>false</tooltipShowMentalStatesToApply>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>PJ_PForcePull</projectileDef>	
		<abilityDef>PJ_ForcePull_Apprentice</abilityDef>
		<isViolent>false</isViolent>		
        <warmupTime>1</warmupTime>
        <SecondsToRecharge>5.0</SecondsToRecharge>
        <range>24</range>
        <burstShotCount>1</burstShotCount>		
        <ticksBetweenBurstShots>2</ticksBetweenBurstShots>
        <soundCast>PJ_PullSound</soundCast>
        <muzzleFlashScale>20</muzzleFlashScale>
        <isPrimary>false</isPrimary>
        <DrawProjectileOnTarget>false</DrawProjectileOnTarget>
		<extraDamages>
		  <li>
		    <damage>1</damage>
			<damageDef>PJ_DForcePull</damageDef>
			<chance>1.0</chance>
		  </li>
		</extraDamages>
	    <targetParams>
		  <canTargetPawns>false</canTargetPawns>
		  <canTargetBuildings>false</canTargetBuildings>		  
		  <canTargetItems>true</canTargetItems>
		  <mapObjectTargetsMustBeAutoAttackable>false</mapObjectTargetsMustBeAutoAttackable>
		  <canTargetSelf>false</canTargetSelf>
		</targetParams>		
    </MainVerb>
  </ThingDef>
  
